{
  "compilerOptions": {
    "target": "es2015",
    "downlevelIteration": true,
    "module": "esnext",
     "lib": [
       "es2015",
       "dom"
     ],
     "declaration": true,
     "sourceMap": true,
     "outDir": "./build/.esnext",
     "removeComments": true,
     "strict": true,
     "noImplicitAny": true,
     "strictFunctionTypes": true,
     "alwaysStrict": true,
     "noUnusedLocals": true,
     "noImplicitReturns": true,
     "moduleResolution": "node"
  },
  "exclude": [
    "./src/**/*.spec.ts",
    "export-package.ts",
    "./build"
  ]
}
